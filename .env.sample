# =============================================================================
# GENERAL
# =============================================================================
NEXT_PUBLIC_STORE_NAME="X-STORE"
NEXT_PUBLIC_SITE_URL="https://localhost:3000"

# =============================================================================
# DATABASE / AUTH
# =============================================================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# Product Stream
PRODUCT_STREAM_API=https://your-product-stream-api.com
PRODUCT_STREAM_X_KEY=your-product-stream-x-key
# COSMOS API (product catalog)
COSMOS_API_BASE_URL=https://moritotabi.com
COSMOS_API_KEY=your-cosmos-api-key

# =============================================================================
# E-COMMERCE (SERVER-SIDE ONLY)
# =============================================================================
# Shopify Configuration (DO NOT USE NEXT_PUBLIC_*)
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_SHOP_NAME=your-shopify-shop-name
SHOPIFY_SHOP=your-shopify-shop.myshopify.com
SHOPIFY_TOKEN=your-shopify-token

# =============================================================================
# FEATURE FLAGS / DEBUG
# =============================================================================


# MessagePack Configuration
NEXT_PUBLIC_ENABLE_MSGPACK=true

# =============================================================================
# FEATURE FLAGS / DEBUG
# =============================================================================

# =============================================================================
# CHAT WIDGET
# =============================================================================
NEXT_PUBLIC_CHAT_WIDGET_ENABLED=false
NEXT_PUBLIC_CHAT_WIDGET_AUTO_OPEN=false
NEXT_PUBLIC_CHAT_WIDGET_POSITION=bottom-right
NEXT_PUBLIC_CHAT_WIDGET_THEME=dark

# =============================================================================
# REDIS / CACHE (UPSTASH)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token
